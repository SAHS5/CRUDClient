<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/truecaller_section_4"
    tools:context=".UpdateActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <EditText
        android:id="@+id/referencePhone"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:hint="Enter phone number"
        android:background="@drawable/lavender_border"
        android:padding="16dp"
        android:gravity="start|center_vertical"
        android:textColor="@color/lavender"
        app:layout_constraintTop_toBottomOf="@id/topGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/updateName"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:hint="Enter name"
        android:background="@drawable/lavender_border"
        android:padding="16dp"
        android:gravity="start|center_vertical"
        android:textColor="@color/lavender"
        app:layout_constraintTop_toBottomOf="@id/referencePhone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/updateOperator"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:hint="Enter operator"
        android:background="@drawable/lavender_border"
        android:padding="16dp"
        android:gravity="start|center_vertical"
        android:textColor="@color/lavender"
        app:layout_constraintTop_toBottomOf="@id/updateName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/updateLocation"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:hint="Enter location"
        android:background="@drawable/lavender_border"
        android:padding="16dp"
        android:gravity="start|center_vertical"
        android:textColor="@color/lavender"
        app:layout_constraintTop_toBottomOf="@id/updateOperator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/updateButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Update"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/updateLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
