<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/truecaller_section_2"
    tools:context="com.example.crudadminkot.UploadActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <EditText
        android:id="@+id/uploadName"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:hint="Enter name"
        android:background="@drawable/lavender_border"
        android:padding="16dp"
        android:gravity="start|center_vertical"
        android:textColor="@color/lavender"
        app:layout_constraintTop_toBottomOf="@id/topGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/uploadOperator"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:hint="Enter operator"
        android:background="@drawable/lavender_border"
        android:padding="16dp"
        android:gravity="start|center_vertical"
        android:textColor="@color/lavender"
        app:layout_constraintTop_toBottomOf="@id/uploadName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>

    <EditText
        android:id="@+id/uploadLocation"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:hint="Enter location"
        android:background="@drawable/lavender_border"
        android:padding="16dp"
        android:gravity="start|center_vertical"
        android:textColor="@color/lavender"
        app:layout_constraintTop_toBottomOf="@id/uploadOperator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>

    <EditText
        android:id="@+id/uploadPhone"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:hint="Enter phone number"
        android:background="@drawable/lavender_border"
        android:padding="16dp"
        android:gravity="start|center_vertical"
        android:textColor="@color/lavender"
        app:layout_constraintTop_toBottomOf="@id/uploadLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Save"
        android:textSize="18sp"
        android:backgroundTint="@color/lavender"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/uploadPhone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
